//- # Breadcrumbs Block/Mixins
//---------------------------------------------------------------------------


mixin _com_breadcrumbs(links)
	nav.breadcrumbs
		ul
			- each link in links
				- if(link[1] != undefined)
					li: a(href="#{link[1]}") #{link[0]}
				- else
					li.active #{link[0]}